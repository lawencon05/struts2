<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default">
		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="dashboard"
			class="com.lawencon.struts.controller.HomeController" method="home">
			<result name="success">/WEB-INF/view/dashboard.jsp</result>
			<result name="error" type="redirect">
				<param name="location">
					/login
				</param>
			</result>
		</action>

		<action name="login"
			class="com.lawencon.struts.controller.AuthController" method="init">
			<result name="error">/WEB-INF/view/login.jsp</result>
			<result name="success" type="redirect">
				<param name="location">
					/dashboard
				</param>
			</result>
		</action>

		<action name="loginprocess"
			class="com.lawencon.struts.controller.AuthController" method="login">
			<result name="success" type="redirect">
				<param name="location">
					/dashboard
				</param>
			</result>
			<result name="error">/WEB-INF/view/login.jsp</result>
		</action>

		<action name="logout"
			class="com.lawencon.struts.controller.AuthController" method="logout">
			<result name="success" type="redirect">
				<param name="location">
					/login
				</param>
			</result>
			<result name="error">/index.jsp</result>
		</action>
	</package>
</struts>